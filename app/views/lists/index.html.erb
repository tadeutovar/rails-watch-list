<div class="wrap">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
        <h5 class="list-title"><%= link_to "#{list.name}", list_path(list) %></h5>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center mt-3">

      <%= link_to "Add new list", new_list_path, :class => "btn btn-primary"%>

  </div>
</div>
