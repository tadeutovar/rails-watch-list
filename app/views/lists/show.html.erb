<h2><%= @list.name %></h2>

<ul>
  <% @list.bookmarks.each do |element| %>
  <li>
    <%= element.movie.title %>
      <%= link_to "Delete",
        bookmark_path(element),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
  </li>
  <% end %>
</ul>

<%= link_to "Bookmark a movie", new_list_bookmark_path(@list) %>
<%= link_to "Back to lists", root_path %>
